{
  "type": "module",
  "main": "dist/index.js",
  "engines": {
    "node": ">= 24"
  },
  "imports": {
    "#/*": "./*",
    "#database/*": "./database/*",
    "#generated/*": "./generated/*",
    "#resolvers/*": "./resolvers/*",
    "#staticData/*": "./staticData/*",
    "#utils/*": "./utils/*"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dumpSchema": "tsx ./utils/dump-schema.mts",
    "graphQlGen": "graphql-codegen --config codegen.yml",
    "prettier": "prettier --write './**/*.{mts,js,graphql}'",
    "start": "tsx index.mts",
    "startDev": "tsx --watch index.mts",
    "startDocker": "docker compose up --build -d",
    "prismaPull": "prisma db pull",
    "prismaGen": "prisma generate --sql",
    "prismaFormat": "prisma format",
    "build:dist": "dotenv -e .env -- node ./tools/build-esbuild.mjs",
    "build": "dotenv -e .env -- sh -lc \"DOCKER_BUILDKIT=1 docker buildx build --platform linux/arm64 --no-cache --progress=plain --build-arg DATABASE_URL=\\\"$DATABASE_URL\\\" -t mattsarz78/graphql:latest .\"",
    "lint": "eslint .",
    "lintFix": "eslint . --fix",
    "dockerRun": "docker run --name gql -p 8020:8020 mattsarz78/graphql:latest",
    "tagImage": "docker tag mattsarz78/graphql:latest mattsarz78/graphql:latest",
    "pushImage": "docker push mattsarz78/graphql:latest",
    "pullImage": "docker pull mattsarz78/graphql:latest"
  },
  "dependencies": {
    "@apollo/server": "^5.2.0",
    "@as-integrations/express5": "^1.1.2",
    "@dotenvx/dotenvx": "^1.51.1",
    "@graphql-tools/graphql-file-loader": "^8.1.8",
    "@graphql-tools/load": "^8.1.7",
    "@graphql-tools/merge": "^9.1.6",
    "@prisma/adapter-pg": "^7.0.1",
    "@prisma/client": "^7.0.1",
    "body-parser": "^2.2.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "graphql": "^16.12.0",
    "luxon": "^3.7.2",
    "tsx": "^4.20.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@graphql-codegen/cli": "^6.1.0",
    "@graphql-codegen/typescript": "^5.0.6",
    "@graphql-codegen/typescript-resolvers": "^5.1.4",
    "@types/body-parser": "^1.19.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "dotenv-cli": "^11.0.0",
    "esbuild": "^0.27.0",
    "prisma": "^7.0.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0"
  },
  "graphql": {
    "schema": "./schema.graphql",
    "documents": "./**/*.{graphql,js,mts,jsx,tsx}"
  },
  "packageManager": "pnpm@10.24.0"
}
