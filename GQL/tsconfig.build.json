{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowImportingTsExtensions": false,
    "outDir": "dist",
    "rootDir": ".",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "ES2023",
    "lib": ["ES2023"],
    "sourceMap": false,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "**/*.ts",
    "**/*.mts",
    "**/*.js",
    "**/*.mjs"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/__generated__/**"
  ]
}
